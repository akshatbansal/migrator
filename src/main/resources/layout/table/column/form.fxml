<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml" VBox.vgrow="ALWAYS">
    <center>
        <VBox>
            <HBox styleClass="form__row">
                <HBox styleClass="form__row-label" alignment="center_left">
                    <Text styleClass="label" text="name" />
                </HBox>
                <TextField fx:id="name" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            </HBox>

            <HBox styleClass="form__row">
                <HBox styleClass="form__row-label" alignment="center_left">
                    <Text styleClass="label" text="format" />
                </HBox>
                <ComboBox fx:id="format" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            </HBox>

            <VBox fx:id="paramsBox">
            </VBox>

            <HBox styleClass="form__row">
                <HBox styleClass="form__row-label" alignment="center_left">
                    <Text styleClass="label" text="default" />
                </HBox>
                <TextField fx:id="defaultText" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            </HBox>

            <HBox styleClass="form__row">
                <HBox styleClass="form__row-label" alignment="center_left">
                    <Text styleClass="label" text="null" />
                </HBox>
                <HBox HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="center_right">
                    <CheckBox fx:id="nullCheckbox" />
                </HBox>
            </HBox>

            <HBox alignment="center">
                <Text styleClass="foreground-dark" text="Manage" />
            </HBox>

            <HBox fx:id="manageBox" styleClass="form__row" alignment="center_left" spacing="10">
                
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox styleClass="form__row" alignment="center_right" spacing="10">
            <Button text="Close" onAction="#close" styleClass="btn-secondary" />
        </HBox>
    </bottom>
</BorderPane>